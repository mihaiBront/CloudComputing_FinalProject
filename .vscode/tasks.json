{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create virtual environment",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "python -m venv .venv; echo 'Virtual environment created'"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source .venv/bin/activate && pip install -U pip && pip install -r requirements.txt"
            ],
            "problemMatcher": [],
            "dependsOn": "Check and Create Virtual Environment",
            "group": "build"
        },
        {
            "label": "Environment Steup",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "sh .scripts/env-setup.bash"
            ],
            "problemMatcher": [],
            "dependsOn": "Get Environment Ready",
            "group": "build"
        }
    ]
}