{
    // See https://go.microsoft.com/fwlink/?linkid=830387 for 
    // more information about the launch.json format
    // Or https://code.visualstudio.com/docs/python/tutorial-flask
    // for more information about debugging flask in VSCode
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}